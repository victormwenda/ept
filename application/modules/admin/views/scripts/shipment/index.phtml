    function SetShipmentCode() {
        var shipmentCode=document.getElementById('shipmentCode').value;
        $("input[name='sampleName[]']").each(function(index){
            counter+=1;
            if($(this).val()<0)
                $(this).val(shipmentCode+"-"+counter);
        });
