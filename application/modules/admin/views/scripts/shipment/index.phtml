    function isFollowChanged () {
        if ($("#isFollowUp").prop('checked')) {
            $("#followsUpFromContainer").css('display', 'block');
            $("#followsUpAutoEnrollContainer").css('display', 'block');
            $("#autoEnroll").prop('checked',true);
            $("#followsUpFrom").addClass('isRequired');
