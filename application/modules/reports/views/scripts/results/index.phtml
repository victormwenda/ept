<script type="text/javascript">
  var startDate = "";
  var endDate = "";
  var paginate = true;

  $(document).ready(function() {
    $('#dateRange').daterangepicker({
        format: 'DD-MMM-YYYY',
        ranges: {
          'Last 60 Days': [moment().subtract('days', 59), moment()],
          'Last 90 Days': [moment().subtract('days', 89), moment()],
          'Last 180 Days': [moment().subtract('days', 179), moment()],
          'Last 12 Months': [moment().subtract('month', 12), moment()],
          'Last 18 Months': [moment().subtract('month', 18), moment()],
        }
      }, function(start, end) {
        startDate = start.format('YYYY-MM-DD');
        endDate = end.format('YYYY-MM-DD');
        getShipmentCodes();
      });
  });

  function getShipmentCodes() {
    if (startDate == "" || endDate=="") {
      alert('Please pick a date range to fetch shipment list');
      $('#dateRange').focus();
      return false;
    }
    $.blockUI();
    $.post("<?php echo $this->url(array('module' => 'reports', 'controller' => 'common', 'action' => 'get-finalised-shipments-by-scheme')); ?>",
      {
        schemeType: 'tb',
        startDate: startDate,
        endDate: endDate,
        format: "html"
      },
      function (data) {
        if (data != 0) {
          $("#shipmentId").html(data);
        }
        $.unblockUI();
      });
  }

  function drawTable() {
    if ($("#dateRange").val()=="" || $("#shipmentId").val()=="") {
      alert("Please pick date range and shipment to proceed");
      return false;
    }
    $("#resultsTable").removeClass("hide");
    $.blockUI;
    oTable = $('#resultsTable').dataTable({
      "oLanguage": {
        "sLengthMenu": "_MENU_ records per page",
        "sEmptyTable": "No data to show"
      },
      "bPaginate": paginate,
      "bJQueryUI": false,
      "bAutoWidth": false,
      "bInfo": true,
      "bScrollCollapse": true,
      "sPaginationType": "bootstrap",
      "bRetrieve": false,
      "bDestroy": true,
      "aoColumns": [
        {"sClass": ""},
        {"sClass": ""},
        {"sClass": ""},
        {"sClass": "center"},
        {"sClass": "center"}
      ],
      "aaSorting": [[1, "desc"]],
      "bProcessing": true,
      "bServerSide": true,
      "sAjaxSource": "<?php echo $this->url(array('module' => 'reports', 'controller' => 'results', 'action' => 'index', 'format' => 'html')); ?>",
      "fnServerParams": function (aoData) {
        aoData.push({"name": "shipmentId", "value": $("#shipmentId").val()});
      },
      "fnServerData": function (sSource, aoData, fnCallback) {
        $.ajax({
          "dataType": 'json',
          "type": "POST",
          "url": sSource,
          "data": aoData,
          "success": fnCallback
        });
      },
      "fnRowCallback": function (nRow, aData, iDisplayIndex) {
        $.unblockUI;
      }
    });
    showPieChart($("#shipmentId").val());
  }

  function showPieChart(shipmentId) {
    $.post("<?php echo $this->url(array('module' => 'reports', 'controller' => 'results', 'action' => 'results-count')); ?>",
      { shipmentId: shipmentId, format: "html" },
      function (data) {
        $("#resultschart").html(data);
        $.unblockUI();
      });
  }
</script>
